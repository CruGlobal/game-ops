# GitHub Configuration
GITHUB_TOKEN=your_github_token_here  # NOTE: Requires 'read:org' scope for DevOps team sync
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_CALLBACK_URL=http://localhost:3000/auth/github/callback

# Repository Configuration
REPO_OWNER=your_repo_owner_here
REPO_NAME=your_repo_name_here
DOMAIN=http://localhost:3000

# DevOps Team Configuration (Optional)
# Used for automatic DevOps team sync from GitHub Teams API
GITHUB_ORG=your_github_org_here  # GitHub organization name (defaults to REPO_OWNER if not set)
DEVOPS_TEAM_SLUG=devops-engineering-team  # GitHub team slug for DevOps team

# Database Configuration (PostgreSQL)
# Local PostgreSQL:
DATABASE_URL=postgresql://username:password@localhost:5432/github_scoreboard
# OR Neon (cloud PostgreSQL):
# DATABASE_URL=postgresql://username:password@ep-xxx-xxx.region.neon.tech/github_scoreboard?sslmode=require

# Application Configuration
NODE_ENV=development
PORT=3000
SESSION_SECRET=your_random_session_secret_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here

# Logging Configuration
LOG_LEVEL=info
PRISMA_LOGGING=false

# WebSocket Configuration
SOCKET_IO_PORT=3000
ENABLE_WEBSOCKET=true
CORS_ORIGIN=http://localhost:3000
